    },
    {
      "name": "get_document_segments",
      "displayName": "精读文档",
      "description": "读取指定文档的所有分段内容，作用是从文档中检索复数个分段内容。doc_id为文档ID；segment_start为要检索的文档的开始分段编号，segment_end为要检索的文档的结束分段编号",
      "endpoint": "http://192.168.100.59/v1/datasets/{self.dataset_id}/documents/{doc_id}/segments?status=completed&page={page}&limit={limit}",
